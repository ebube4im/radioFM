<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="מרחק"
        android:id="@+id/distanceTitleTv"
        android:layout_gravity="center"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        android:layout_weight="2"
        android:textAlignment="center"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:id="@+id/runningFragLL1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/distanceTv"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="38sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="מטר"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:gravity="left"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/runningFragLL2"
        android:layout_weight="1"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="זמן"
            android:id="@+id/timerTitleTv"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/cardview_dark_background"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="מהירות"
            android:id="@+id/speedTitleTv"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/cardview_dark_background"
            android:textAlignment="center"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/whiteLines">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/whiteLine1"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#93ffffff"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/whiteLine2"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#73ffffff"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/runningFragLL3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00:00"
            android:id="@+id/timerTv"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:gravity="right"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:id="@+id/speedLL"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/speedTv"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:gravity="right"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text='קמ"ש'
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:id="@+id/lineGraph"
            android:layout_height="200dp"
            android:paddingBottom="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:visibility="invisible"></com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/runningHistoryFrame"
                >

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/runningHistoryText"
                android:layout_height="40dp"
                android:background="#ffffff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/runningHistoryText"
                android:layout_gravity="center_horizontal"
                android:textColor="#00ccff"
                android:textAlignment="center"
                android:textSize="16sp"
                android:autoText="false"
                android:gravity="center_vertical" />

                <Button
                    android:text="נקה"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/clearHistoryBtn"
                    android:background="@drawable/ltgray_outline"
                    android:textColor="@color/light_gray_nlue" />

            </FrameLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/runningLv"
                ></ListView>

        </LinearLayout>


    </FrameLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="התחל ריצה"
        android:id="@+id/startStopBtn"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:background="#aa4a728b"
        android:textColor="#bad2f0ff"
        android:textSize="30sp" />

</LinearLayout>
